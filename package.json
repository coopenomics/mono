{
  "name": "monocoop",
  "private": true,
  "dependencies": {
    "commitgpt": "^2.0.0",
    "coop-notificator": "workspace:*",
    "cooparser-ts": "workspace:*",
    "coopback": "workspace:*",
    "coopdoc-generator-ts": "workspace:*",
    "cooptypes": "workspace:*",
    "lerna": "^8.1.6",
    "terminal": "workspace:*"
  },
  "devDependencies": {
  },
  "scripts": {
    "dev": "lerna run dev --parallel --scope coopback --scope terminal --scope cooparser-ts --scope coop-notificator",
    "dev:types": "lerna run dev --parallel --scope cooptypes",
    "gpt-commit": "git add . && commitgpt",
    "next": "lerna version",
    "testnet": "lerna publish prerelease --message 'chore(release): publish [TESTNET]'",
    "production": "lerna publish --conventional-commits --conventional-graduate --message 'chore(release): publish [PROD]'"
  }
}
